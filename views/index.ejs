<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  </head>
  <body>
    
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <div class="container">
      <div class="row">
        <% books.forEach(book => { %>
          <div class="col-md-4 mb-4">
            <div class="card" style="width: 18rem;">
              <div class="card-body">
                <h5 class="card-title"><%= book.bookName %></h5>
                <h6 class="card-subtitle mb-2 text-muted">by <%= book.bookAuthor %></h6>
                <p class="card-text"><%= book.bookDes %></p>
                <a href="#" class="btn btn-primary">Read More</a>
                <!-- <a href="/delete/<%= book._id%>" class="btn btn-primary">Delete</a>
                  -->
                  <form action="/delete/<%= book._id %>" method="post"> 
                    <button type="submit" class="btn btn-primary edit">delete</button>
                  </form>
                <form action="/edit/<%= book._id %>" method="get"> 
                  <button type="submit" class="btn btn-primary edit">Edit</button>
                </form>
        

              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

  </body>
</html>
